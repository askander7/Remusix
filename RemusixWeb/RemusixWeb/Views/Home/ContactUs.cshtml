    <script src="~/plugins/jPlayer/jplayer.playlist.min.js"></script>
    <script src="~/js/blog.js"></script>

    <script>
        $(function () {
            $("#btnSend").click(function () {
                $.get("/Home/SendMessage", { Sender: $("#Sender").val(), Content: $("#Content").val() });
                $("#Content").val('');
            });
        });

    </script>
</body>
