                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Home -->
        <!-- Blog -->

        <div class="blog">
            <div class="container">
                <div class="row">

                    <!-- Blog Posts -->
                    <div class="col-lg-9">
                        <div class="blog_posts">

                            <!-- Blog Post -->
                            <div class="blog_post">
                                <div class="blog_post_title"><h2>Contact Us </h2></div>

                                <div class="blog_post_info">
                                    <ul class="d-flex flex-row align-items-start justify-content-start">
                                        <li>Share </li>
                                        <li>Opinion</li>
                                    </ul>
                                </div> <br><br><br>
                                <div class="col-lg-6">
                                    <div class="contact_form_container">
                                        <div class="contact_title">Send us a message</div>
                                        <form action="#" class="contact_form" id="contact_form">
                                            <input type="text" class="contact_input" value="@Model.UserName" name="Sender" id="Sender" required="required">
                                            <input type="email" class="contact_input" value="@Model.Email" placeholder="ess@cvb.com" required="required">
                                            <textarea class="contact_input contact_textarea" name="Content" id="Content" placeholder="Message" required="required">
                                                @("From:Admin\n")
                                              @foreach (Message message in ViewBag.messages)
                                            	{
                                          
                                                  @("message:\n"+message.MessageContent+"\n")
                                                  @("at:\n" + message.MessageTime+"\n" + "\n")
                                            	}
                                             </textarea>
                                                <div class="btn-sx text-center">
                                                <button class="contact_button " id="btnSend">Send </button><br>
                                                <button type="reset" class="contact_button " id="btnSend">Reset </button><br>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>

                            <!-- Blog Post -->
                            <!-- Blog Post -->


                        </div>

                    </div>

                    <!-- Sidebar -->
                    <div class="col-lg-3">

                        <div class="sidebar">

                            <div class="sidebar_section">

                                <div class="blog_post_title sact"><h3>Account Setting</h3></div>
                                <div class="sidebar_list">
                                    <ul>
                                        <li><a href="~/Users/Information">Account Information</a></li>
                                        <li><a href="~/Home/ConnectWith">Connect With</a></li>
                                        <li><a href="~/Home/BlockList">Block List</a></li>
                                        <li><a href="~/Home/Location">Location</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="sidebar_section">
                                <div class="blog_post_title "><a href="~/Home/About"><h3>About Us</h3></a></div>

                            </div>
                            <div class="sidebar_section">
                                <div class="blog_post_title sact"><a href=""><h3>Contact Us</h3></a></div>
                            </div>
                            <div class="blog_post_text deact">
                                <a href="~/Home/DeActive"><p>Deactive Account.</p></a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Footer -->

        <footer class="footer">
            <div class="footer_list">
                <ul>
                    <li><a href="~/Home/About">About</a></li>
                    <li><a href="~/Home/Setting">Setting</a></li>
                    <li><a href="">Contact Us</a></li>

                </ul>
            </div>
            <div class="copyright_bar">

                <span>
